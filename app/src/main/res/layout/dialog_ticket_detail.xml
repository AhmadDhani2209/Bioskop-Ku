<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/bg_rounded_white">

    <TextView
        android:id="@+id/dialog_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="E-Tiket Bioskop"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="16dp"/>

    <!-- PERBAIKAN: Menambahkan ImageView untuk Poster Film di Dialog -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/iv_movie_poster"
                android:layout_width="80dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_image_broken"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/dialog_movie_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Judul Film"
                android:textSize="18sp"
                android:textStyle="bold"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/dialog_showtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jadwal: -"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:textColor="#555555"/>

            <TextView
                android:id="@+id/dialog_seats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kursi: -"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:textColor="#555555"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_qr_code"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/qr_pembayaran" 
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/dialog_scan_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Tunjukkan QR ini pada petugas"
        android:gravity="center"
        android:textColor="#555555"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/btn_close_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tutup"
        android:backgroundTint="#E0E0E0"
        android:textColor="@color/black"/>

</LinearLayout>